// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  staff
  admin
}

model User {
  id          String      @id @default(cuid())
  idCard      String      @unique
  name        String
  position    String
  departement String
  role        Role        @default(staff)
  attendances Attendance[]
}

model Attendance {
  id        String   @id @default(cuid())
  userId    String
  idCard    String
  name      String
  date      DateTime
  timeIn    DateTime
  timeOut   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
}

model Auth {
  id        Int      @id @default(autoincrement())  // ID otomatis increment integer
  idCard    String   // idCard dari User
  role      Role     // Role dari User
  username  String   @unique  // Username yang akan digunakan untuk login
  password  String   // Password yang sudah di-hash
}